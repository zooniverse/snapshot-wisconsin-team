@import "common"

html
  font-family: 'Montserrat', sans-serif;
  margin: 0;
  min-height: 100%;
  overflow-y: scroll;

  body
    background-color: #0e4b84;
    margin: 0;
    height: 100%;
    padding: 0;
    position: relative;
    -webkit-font-smoothing: antialiased;

    > h1
      color: $white;
      font: normal 30px Georgia, serif;
      letter-spacing: 10px
      margin: 30px 0 15px;
      position: relative;
      text-align: center;
      text-shadow: 0 2px 3px $black;
      text-transform: uppercase;
      z-index: 1;

      a
        color: inherit;
        text-decoration: none;

        img
          border: 0;

    .site-navigation
      background: white;
      box-sizing: border-box
      display: flex
      font-size: 14px;
      font-weight: bold;
      padding: 12px 0 12px 50px;
      @media $desktop-or-smaller
        padding: 75px 0 35px 0;
        text-align: center;
      @media $phone-or-smaller
        flex-wrap: wrap
        padding-top: 50px;

      > *
        align-self: center
        padding: 0 13px

      a
        border: 2px solid transparent;
        border-radius: 125px;
        color: $medium-grey-font;
        display: block;
        opacity: 0.75;
        padding: 7px 10px;
        text-align: center;
        text-decoration: none;
        width: 100%;
        &:hover,
        &.active
          border-color: $green
        &.logo
          border-color: transparent
          height: 75px
          img
            max-height: 100%

      @media $phone-or-smaller
        width: 100%;

    .before-load
      color: $white;
      font-size: 12px;
      font-weight: bold;
      text-align: center;
      text-shadow: 0 1px 1px $black

    .main
      z-index: 1;
      height 100%

      > *
        display: none;

        &.active
          display: block;

      a
        color: inherit;

      hr
        height: 0;
        border: 1px solid transparent;
        border-top-color: rgba($black, 0.5);
        border-bottom-color: rgba($white, 0.25);

  @media $phone-or-smaller
    .zooniverse-top-bar
      background-color: $white;
      color: $dark-grey-font;
      .corner svg
        display none
      .zooniverse-info
        display none

  .site-footer
    background: $green-dark

    .zooniverse-footer
      color: white;
      margin: 0 auto;
      padding: 50px 0 25px 0;
      max-width: 64em;
      .zooniverse-logo-container
        display: block;
        width: 100%;
        text-align: center;
        .zooniverse-logo
          width: 90px;
          margin-bottom: 30px;
          fill: white;

      .zooniverse-footer-content
        float: none;
        width: 100%;

      .zooniverse-footer-heading
        wrap(720px);
        text-align: center;
        font-size: 16px;
        line-height: 1.5em;
        margin-bottom: 20px;

      .zooniverse-footer-projects a
        color: #ddd;

      .zooniverse-footer-category
        @media $desktop-or-smaller
          width: 50%;
          text-align: center;
          margin-bottom: 20px;
          .zooniverse-footer-category-title
            margin-bottom: 5px;
        @media $phone-or-smaller
          width: 100%;
  ::selection
    color #fff
    background $gold
  ::-moz-selection
    color #fff
    background $gold
