@import "common"

.secondary-header
  margin 0
  height 150px
  background linear-gradient(to bottom right, #0e4b84 , #5d6e7e)
  h1
    display block
    margin 0 auto
    max-width 1090px
    max-height 150px
    padding 0 5vw
    color #fff
    font-size 40px
    a
      max-height inherit
      display inline-block
      color #fff
      &:link
        text-decoration none
      &:visited
        color inherit
    img
      max-height 150px
      vertical-align middle
    span
      padding 0 2vw

.secondary-bg
  background-color $white
  padding 0 5vw 50px 5vw
  min-height 730px
  overflow auto

  .secondary-content
    margin 0 auto
    max-width 1090px
    color $medium-grey-font
    span
      pointer-events none
    nav
      margin-bottom 40px
      button
        height 60px
        color $medium-grey-font
        font-size 16px
        font-weight 300
        padding 0 10px
        background-color transparent
        transition background-color 0.2s
        &.active
          color #fff
          background-color $green-really

    h1
      font-weight 300
      font-size 36px
      line-height 1.2em
      margin-bottom 30px
      a
        font-size 30px
        font-style normal
        text-decoration none
        &:hover
          text-decoration underline

    figure
      background: rgba(black, 0.02)
      border-radius: 4px
      box-sizing: border-box
      margin: 0 0 40px 0
      padding: 20px
      text-align: center

    h2
      font-size 30px
      font-weight 300
      color $medium-grey-font

    li, p
      line-height 1.5em
      font-size 16px
      font-weight 300
      margin-bottom 20px

    .team-member
      margin: 0 0 30px 0
      overflow auto

      img
        border-radius 5px
        float left
        margin 0 30px 20px 0
        max-width 180px
        vertical-align middle

      p
        margin 0
        max-width 430px
        float left

    a
      text-decoration underline

    .left-column
      float left
      .content
        padding-right 30px

    .sub-nav
      line-height: 50px

      button
        padding: 0 15px

        &.active
          background: #f60
          color: white



  @media $tablet-or-smaller
    .secondary-content
      .left-column
        width 100%
        .content
          padding 0
